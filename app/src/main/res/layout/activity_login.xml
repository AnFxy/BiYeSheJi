<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".LoginActivity">
    <View
        android:layout_weight="0.3"
        android:layout_width="match_parent"
        android:layout_height="0sp"/>
    <TextView
        android:layout_weight="1.4"
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:id="@+id/text_back_loginactivity"
        android:background="@drawable/back1"
        android:textColor="#000000"
        android:padding="8sp"
        android:gravity="center"
        android:textSize="16sp"/>
    <TextView
        android:layout_weight="2.6"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:text="账号登录"
        android:typeface="monospace"
        android:textColor="#000000"
        android:padding="8sp"
        android:gravity="center_vertical"
        android:textSize="24sp"/>

    <LinearLayout
        android:layout_weight="1.3"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:orientation="horizontal">
        <!--账号图标-->
        <ImageView
            android:layout_weight="0.7"
            android:paddingLeft="10sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/uselogo"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0sp"
            android:text="账号"
            android:typeface="monospace"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_height="match_parent"/>

        <EditText
            android:id="@+id/edit_zhanghao_loginactivity"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:layout_weight="5"
            android:layout_width="0sp"
            android:gravity="center_vertical"
            android:textCursorDrawable="@drawable/cursor_color"
            android:hint="请填写账号"
            android:alpha="0.4"
            android:background="@null"
            android:layout_height="match_parent"
            android:padding="8sp"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:id="@+id/line_zhanghaocheck_login"
        android:layout_width="match_parent"
        android:background="#ececec"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"
        android:layout_height="1sp"/>

    <LinearLayout
        android:layout_weight="1.3"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:orientation="horizontal">
        <ImageView
            android:layout_weight="0.6"
            android:paddingLeft="10sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/passlogo"/>
        <TextView
            android:layout_weight="1.1"
            android:layout_width="0sp"
            android:text="密码"
            android:typeface="monospace"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:paddingLeft="4sp"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/edit_mima_loginactivity"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:layout_weight="5"
            android:layout_width="0sp"
            android:gravity="center_vertical"
            android:hint="请填写密码"
            android:textCursorDrawable="@drawable/cursor_color"
            android:inputType="textPassword"
            android:alpha="0.4"
            android:background="@null"
            android:layout_height="match_parent"
            android:padding="8sp"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:id="@+id/line_mimacheck_login"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"
        android:background="#ececec"/>

    <TextView
        android:id="@+id/text_nofunction_one"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:padding="8sp"
        android:text="用微信号/QQ号/邮箱登录"
        android:textColor="#586b95"
        android:textSize="15sp"
        android:typeface="monospace" />

    <Button
        android:id="@+id/btn_login_loginactivity"
        android:layout_weight="1.1"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:gravity="center"
        android:text="直接登录"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"
        android:background="@drawable/button_selector1"
        android:typeface="monospace"
        android:textColor="#b4b4b4"
        android:textSize="16sp"
        />
    <View
        android:layout_weight="5.2"
        android:layout_width="match_parent"
        android:layout_height="0sp"/>
    <TextView
        android:id="@+id/text_nofunction_two"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="#586b95"
        android:text="找回密码  |  紧急冻结  |  环卫小贴士安全中心"/>
</LinearLayout>
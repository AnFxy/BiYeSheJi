<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <!--空白标题栏-->
    <View
        android:background="#ffffff"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0sp"/>
    <!--空白上区域-->
    <View
        android:background="#ffffff"
        android:layout_weight="0.6"
        android:layout_width="match_parent"
        android:layout_height="0sp"/>
    <!--个人基本信息 圆形头像，昵称，账号等-->
    <LinearLayout
        android:id="@+id/linear_mine_fragment"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="85sp">
        <!--图片-->
        <com.ilikexy.biyesheji.zidingyiview.RoundedSquare
            android:id="@+id/imag_mine_fragment"
            android:layout_width="65sp"
            android:layout_height="65sp"
            app:roundedRadius="8sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="8sp"
            android:layout_gravity="center" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--昵称-->
            <TextView
                android:id="@+id/text_fakename_minefra"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:text="昵称"
                android:typeface="monospace"
                android:textColor="#000000"
                android:padding="6sp"
                android:gravity="center_vertical"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0sp">
                <!--方信号-->
                <TextView
                    android:layout_weight="1.3"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:text="账号:"
                    android:typeface="monospace"
                    android:textColor="#9c9c9c"
                    android:paddingLeft="6sp"
                    android:gravity="left"
                    android:textSize="14sp"/>
                <!--具体方信号-->
                <TextView
                    android:id="@+id/text_usename_minefra"
                    android:layout_weight="2.7"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:text="00000000000000"
                    android:typeface="monospace"
                    android:textColor="#9c9c9c"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_weight="0.8"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:text="›"
                    android:typeface="monospace"
                    android:textColor="#c0c0c0"
                    android:gravity="left"
                    android:textSize="30sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!--空白下区域-->
    <View
        android:background="#ffffff"
        android:layout_weight="0.6"
        android:layout_width="match_parent"
        android:layout_height="0sp"/>
    <!--灰色分割区域-->
    <View
        android:background="#aaaaaa"
        android:layout_width="match_parent"
        android:layout_height="0.1sp"/>
    <View
        android:background="#ededed"
        android:layout_width="match_parent"
        android:layout_height="9sp"></View>
    <View
        android:background="#aaaaaa"
        android:layout_width="match_parent"
        android:layout_height="0.1sp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_mine_fragment"
        android:layout_weight="10.3"
        android:layout_width="match_parent"
        android:layout_height="0sp"/>
</LinearLayout>
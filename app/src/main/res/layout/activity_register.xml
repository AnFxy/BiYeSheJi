<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".RegisterActivity">
    <View
        android:layout_weight="0.3"
        android:layout_width="match_parent"
        android:layout_height="0sp"/>
    <!--返回按钮-->
    <TextView
        android:id="@+id/text_back_registeractivity"
        android:layout_weight="1.3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/back1"
        android:textColor="#000000"
        android:padding="8sp"
        android:gravity="center"
        android:textSize="16sp"/>
    <!--注册标题-->
    <TextView
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:text="账号注册"
        android:typeface="monospace"
        android:textColor="#000000"
        android:padding="8sp"
        android:gravity="center_vertical"
        android:textSize="24sp"/>
    <!--昵称编辑区域-->
    <LinearLayout
        android:layout_weight="1.4"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:text="昵称"
            android:typeface="monospace"
            android:textColor="#000000"
            android:padding="8sp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            />
        <EditText
            android:id="@+id/edit_fakename_register"
            android:layout_weight="2.4"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:hint="例如：方啸云"
            android:textCursorDrawable="@drawable/cursor_color"
            android:alpha="0.4"
            android:background="@null"
            android:padding="8sp"
            android:textSize="15sp"
            />

        <com.ilikexy.biyesheji.zidingyiview.RoundedSquare
            android:id="@+id/img_click_touxiang"
            android:layout_weight="0.66"
            android:layout_width="0sp"
            android:layout_marginRight="8sp"
            android:layout_height="match_parent"
            app:roundedRadius="10sp"
            >

        </com.ilikexy.biyesheji.zidingyiview.RoundedSquare>

    </LinearLayout>
    <!--显示线的颜色与头像切换-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:orientation="horizontal">
        <View
            android:id="@+id/view_fakename_line"
            android:layout_weight="7"
            android:layout_width="0sp"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="8sp"
            android:background="#03c45c"
            android:layout_height="0.5sp"/>
        <View
            android:layout_weight="1.6"
            android:layout_width="0sp"
            android:layout_height="0.5sp"/>
    </LinearLayout>

    <!--国家和地区-->
    <LinearLayout
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:text="国家/地区"
            android:typeface="monospace"
            android:textColor="#000000"
            android:padding="8sp"
            android:gravity="center_vertical"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/text_china"
            android:layout_weight="3"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:text="中国大陆 (+86)"
            android:typeface="monospace"
            android:textColor="#03c45c"
            android:padding="8sp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            />
    </LinearLayout>
    <!--账号编辑区域-->
    <LinearLayout
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:text="帐号"
            android:typeface="monospace"
            android:textColor="#000000"
            android:padding="8sp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            />
        <EditText
            android:id="@+id/edit_zhanghao_register"
            android:layout_weight="3"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:textCursorDrawable="@drawable/cursor_color"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:hint="请填写账号"
            android:alpha="0.4"
            android:background="@null"
            android:padding="8sp"
            android:textSize="15sp"
            />
    </LinearLayout>
    <View
        android:id="@+id/view_zhanghao_line"
        android:layout_width="match_parent"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"
        android:background="#03c45c"
        android:layout_height="0.5sp"/>
    <!--密码编辑区域-->
    <LinearLayout
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:text="密码"
            android:typeface="monospace"
            android:textColor="#000000"
            android:padding="8sp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            />
        <EditText
            android:id="@+id/edit_mima_register"
            android:layout_weight="3"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:hint="请填写密码"
            android:textCursorDrawable="@drawable/cursor_color"
            android:inputType="textPassword"
            android:alpha="0.4"
            android:background="@null"
            android:padding="8sp"
            android:textSize="15sp"
            />
    </LinearLayout>
    <View
        android:id="@+id/view_mima_line"
        android:layout_width="match_parent"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"
        android:background="#03c45c"
        android:layout_height="0.5sp"/>
    <!--单选框服务条款-->
    <LinearLayout
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:orientation="horizontal">
        <View
            android:layout_width="0sp"
            android:layout_weight="1.2"
            android:layout_height="match_parent"/>
        <CheckBox
            android:id="@+id/checkbox_registeractivity"
            android:layout_weight="2"
            android:layout_width="0sp"
            android:gravity="center"
            android:textColor="#b4b4b4"
            android:textSize="13sp"
            android:layout_height="match_parent"
            android:text="已阅读并同意"/>
        <TextView
            android:id="@+id/text_xieyi"
            android:layout_weight="3"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:text="《软件许可服务协议》"
            android:typeface="monospace"
            android:textColor="#586b95"
            android:gravity="center_vertical"
            android:textSize="14sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_registeractivity"
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:gravity="center"
        android:text="注册"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"
        android:background="@drawable/button_selector1"
        android:typeface="monospace"
        android:textColor="#b4b4b4"
        android:textSize="16sp"/>
    <View
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0sp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">
    <TextView
        android:id="@+id/tv_order_item_foundfrag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="12"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textColor="#000000"
        android:gravity="center"
        android:background="@drawable/button_press"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <com.ilikexy.biyesheji.zidingyiview.RoundedSquare
        android:id="@+id/roupic_usepic_item_foundfrag"
        android:layout_marginLeft="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_order_item_foundfrag"/>
    <TextView
        android:id="@+id/tv_fakename_item_foundfrag"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="愉快的萧大侠"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textColor="#333333"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/roupic_usepic_item_foundfrag"/>
    <TextView
        android:id="@+id/tv_right_number_item_foundfrag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="256"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textColor="#000000"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_fakename_item_foundfrag"/>
</androidx.constraintlayout.widget.ConstraintLayout>
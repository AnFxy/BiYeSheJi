<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160sp"
    android:layout_marginRight="8sp"
    android:layout_marginLeft="8sp">
    <!--分隔栏-->
    <View
        android:id="@+id/view_fenge_quesfragitem"
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="#666666"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/view_fengetwo_quesfragitem"
        android:layout_width="match_parent"
        android:layout_height="12sp"
        android:background="#ededed"
        app:layout_constraintTop_toBottomOf="@id/view_fenge_quesfragitem"/>
    <!--标题-->
    <TextView
        android:id="@+id/text_title_quesfragitem"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        app:layout_constraintTop_toBottomOf="@+id/view_fengetwo_quesfragitem"
        android:text="文章标题"
        android:ellipsize="end"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:textSize="18sp"
        />
    <!--头像-->
    <com.ilikexy.biyesheji.zidingyiview.RoundPicture
        android:id="@+id/roupic_author_quesfragitem"
        android:layout_width="30sp"
        android:layout_height="30sp"
        app:layout_constraintTop_toBottomOf="@+id/text_title_quesfragitem"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/libai"/>
    <!--用户名字-->
    <TextView
        android:id="@+id/text_usename_quesfragitem"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:text="用户名称"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textColor="#666666"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:layout_marginLeft="10sp"
        app:layout_constraintTop_toBottomOf="@+id/text_title_quesfragitem"
        app:layout_constraintLeft_toRightOf="@+id/roupic_author_quesfragitem"
        />
    <!--发布时间-->
    <TextView
        android:id="@+id/text_questiontime_quesfragitem"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:text="2020年4月21日 16：25：23"
        android:typeface="monospace"
        android:textColor="#666666"
        android:gravity="center_vertical"
        android:textSize="12sp"
        android:layout_marginLeft="10sp"
        app:layout_constraintTop_toBottomOf="@+id/text_title_quesfragitem"
        app:layout_constraintLeft_toRightOf="@+id/text_usename_quesfragitem"
        />
    <!--问题内容-->
    <TextView
        android:id="@+id/text_questioncon_quesfragitem"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        app:layout_constraintTop_toBottomOf="@+id/text_usename_quesfragitem"
        android:text="问题的具体内容问题的具体内容问题的具体内容问题的\n具体内容问题的具体内容问题的具体内容"
        android:maxLines="2"
        android:ellipsize="end"
        android:typeface="monospace"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:textSize="16sp"
        />
    <!--赞同个数-->
    <TextView
        android:id="@+id/text_questionagree_quesfragitem"
        android:layout_width="wrap_content"
        android:layout_height="28sp"
        app:layout_constraintTop_toBottomOf="@+id/text_questioncon_quesfragitem"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="1697 赞同 - "
        android:maxLines="2"
        android:typeface="monospace"
        android:textColor="#666666"
        android:gravity="center_vertical"
        android:textSize="16sp"
        />
    <!--回答个数-->
    <TextView
        android:id="@+id/text_questionanswer_quesfragitem"
        android:layout_width="wrap_content"
        android:layout_height="28sp"
        app:layout_constraintTop_toBottomOf="@+id/text_questioncon_quesfragitem"
        app:layout_constraintLeft_toRightOf="@id/text_questionagree_quesfragitem"
        android:text="277 回答"
        android:maxLines="2"
        android:typeface="monospace"
        android:textColor="#666666"
        android:gravity="center_vertical"
        android:textSize="16sp"
        />
    <ImageView
        android:id="@+id/image_menu_quesfragitem"
        android:layout_width="28sp"
        android:layout_height="28sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_questioncon_quesfragitem"
        android:src="@drawable/menu"/>
</androidx.constraintlayout.widget.ConstraintLayout>
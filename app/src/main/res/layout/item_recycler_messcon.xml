<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="10sp" />
    <!--标题，作者，时间，评论，图片-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:orientation="horizontal"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp">
        <!--标题，作者，时间，评论-->
        <LinearLayout
            android:layout_width="0sp"
            android:layout_weight="2.5"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--标题-->
            <TextView
                android:id="@+id/text_title_messconrecy"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:maxLines="2"
                android:layout_weight="3"
                android:text="3.23正式服更新：李白两年内首次加强，马克终究逃不过"
                android:typeface="monospace"
                android:textColor="#000000"
                android:padding="8sp"
                android:textSize="16sp"/>
            <!--作者，时间，评论-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <!--作者-->
                <TextView
                    android:id="@+id/text_author_messconrecy"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="暴走的刘备"
                    android:maxLines="1"
                    android:typeface="monospace"
                    android:textColor="@color/colorGray"
                    android:gravity="center_vertical"
                    android:paddingLeft="8sp"
                    android:textSize="10sp"/>
                <!--时间-->
                <TextView
                    android:id="@+id/text_time_messconrecy"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2021/3/24"
                    android:typeface="monospace"
                    android:textColor="@color/colorGray"
                    android:padding="4sp"
                    android:gravity="center_vertical"
                    android:textSize="10sp"/>
                <!--评论-->
                <ImageView
                    android:layout_width="22sp"
                    android:layout_height="22sp"
                    android:layout_gravity="center"
                    android:src="@drawable/pinglun"/>
                <TextView
                    android:id="@+id/text_comment_messconrecy"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:text="564"
                    android:typeface="monospace"
                    android:textColor="@color/colorGray"
                    android:textSize="10sp"/>
            </LinearLayout>
        </LinearLayout>
        <!--图片-->
        <com.ilikexy.biyesheji.zidingyiview.RoundedSquare
            android:id="@+id/image_articler_messconrecy"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="66sp"
            android:layout_gravity="center"
            android:layout_marginRight="8sp"
            app:roundedRadius="4sp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginLeft="18sp"
        android:layout_marginRight="18sp"
        android:background="#ededed"/>
</LinearLayout>
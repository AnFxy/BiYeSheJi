<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:elevation="4dp"
    tools:context=".TestActivity">
    <!--返回栏-->
    <!--返回图标-->
    <ImageView
        android:id="@+id/image_back_answerac"
        android:layout_width="40sp"
        android:layout_height="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8sp"
        android:src="@drawable/back1"/>
    <TextView
        android:id="@+id/tv_test_answerac"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:text="每日一练"
        android:layout_marginLeft="100sp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/image_back_answerac" />
    <!--计时器-->
    <TextView
        android:layout_width="80dp"
        android:layout_height="26dp"
        android:text="00:12"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_test_answerac"
        android:background="@drawable/linear_border"/>
    <!--其他功能选项图标-->
    <ImageView
        android:id="@+id/image_menu_answerac"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8sp"
        android:src="@drawable/menu"/>
    <!--计数，题型-->
    <TextView
        android:id="@+id/tv_order_answerac"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:text="1"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textColor="#f5a623"
        android:gravity="right|center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/image_menu_answerac"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/tv_count_answerac"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:text="/9"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/image_menu_answerac"
        app:layout_constraintLeft_toRightOf="@id/tv_order_answerac" />
    <TextView
        android:id="@+id/tv_type_ti_answerac"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="单选题"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textColor="#999999"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/image_menu_answerac"
        app:layout_constraintLeft_toRightOf="@id/tv_count_answerac" />
    <!--分割栏-->
    <View
        android:id="@+id/div_fenge_answerac"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_type_ti_answerac"
        android:background="#E1E0E0"
        android:elevation="1dp"/>


    <FrameLayout
        android:id="@+id/fl_ti_answer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/div_fenge_answerac"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>


    <!--按钮-->
    <LinearLayout
        android:id="@+id/ll_ti_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fl_ti_answer"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:gravity="center">
        <!--上一题-->
        <Button
            android:id="@+id/btn_last_tifragment"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="上一题"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="#ffffff"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/button_selector"
            android:textSize="18sp"
            />
        <!--下一题-->
        <Button
            android:id="@+id/btn_next_tifragment"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="下一题"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@drawable/button_selector"
            android:textSize="18sp"
            />
        <!--提交-->
        <Button
            android:id="@+id/btn_submit_tifragment"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="提交"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@drawable/button_selector"
            android:textSize="18sp"
            android:visibility="gone"
            />
    </LinearLayout>

    <!--底部进行收藏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"

        android:orientation="horizontal"
        android:gravity="center">

        <!--收藏图标-->
        <CheckBox
            android:id="@+id/cb_collect_tifragment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/collect_selector"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
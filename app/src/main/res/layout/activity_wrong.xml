<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WrongActivity">
    <ImageView
        android:id="@+id/iv_back_wrongac"
        android:layout_width="40sp"
        android:layout_height="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8sp"
        android:src="@drawable/back1"/>
    <!--标注-->
    <LinearLayout
        android:id="@+id/lv_wrongac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/text_green_small"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":正确选项"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="#999999"
            android:gravity="top"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/text_red_small"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":你选择的错误选项"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="#999999"
            android:gravity="top"
            android:textSize="16sp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/rv_wrongac"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lv_wrongac"/>
</androidx.constraintlayout.widget.ConstraintLayout>
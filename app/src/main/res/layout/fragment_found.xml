<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp">
    <!--自定义控件，类似于qq步数-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:gravity="center">
        <com.ilikexy.biyesheji.zidingyiview.QQStep
            android:id="@+id/qqstep_foundfragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <!---累计练习天数-->
    <TextView
        android:id="@+id/tv_answer_days_foundfragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="累计练习1天"
        android:typeface="monospace"
        android:textColor="#999999"
        android:padding="8sp"
        android:gravity="center"
        android:textSize="12sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10sp"></View>
    <!--排行榜-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:background="@drawable/linear_border">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_foundfragment_rank_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10sp"></View>
    <!--开始练习题目-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:background="@drawable/linear_border">
        <ImageView
            android:id="@+id/iv_test_foundfragment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/everdayti"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="monospace"
            android:textColor="#999999"
            android:text="开始练习"
            android:layout_marginLeft="12sp"
            android:layout_marginRight="10sp"
            android:gravity="center"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/iv_test_foundfragment"
            app:layout_constraintLeft_toLeftOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10sp"></View>
    <!--收藏，错题，做题记录-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:background="@mipmap/collwrongdo"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_coll_foundfragment"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:typeface="monospace"
            android:textColor="#999999"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:padding="8sp"
            android:gravity="center"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tv_wrong_foundfragment"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:typeface="monospace"
            android:textColor="#999999"

            android:layout_marginRight="6sp"
            android:padding="8sp"
            android:gravity="center"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tv_dorecord_foundfragment"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:typeface="monospace"
            android:textColor="#999999"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:padding="8sp"
            android:gravity="center"
            android:textSize="12sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10sp"></View>
</LinearLayout>